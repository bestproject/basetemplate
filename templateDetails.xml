<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.6" type="template" client="site">
	<name>BASETHEME</name>
	<version>1.0</version>
	<creationDate>01/01/2000</creationDate>
	<author>Artur Stępień</author>
	<authorEmail>artur.stepien@bestproject.pl</authorEmail>
	<copyright>Copyright (C) 2018 BASETHEME. All rights reserved.</copyright>
	<description>TPL_BASETHEME_XML_DESCRIPTION</description>
	
	<files>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>sass</folder>
		<folder>vendor</folder>
		<filename>build.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
	</files>
	
	<positions>
		<position>menu</position>
		<position>slider</position>
		<position>slider-after</position>
		<position>left</position>
		<position>content-before</position>
		<position>content-after</position>
		<position>right</position>
		<position>footer-before</position>
		<position>footer</position>
		<position>footer-menu</position>
	</positions>
	
	<languages folder="language">
		<language tag="pl-PL">pl-PL/pl-PL.tpl_basetheme.ini</language>
		<language tag="pl-PL">pl-PL/pl-PL.tpl_basetheme.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_basetheme.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_basetheme.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			
			<fieldset name="basic">

				<field name="logoFile" class="" type="media" default=""
					label="TPL_BASETHEME_LOGO_LABEL"
					description="TPL_BASETHEME_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default="BP Basetheme"
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />
                
                <field name="copyrights"  type="text" default="Best Project"
					label="TPL_BASETHEME_FIELD_COPYRIGHTS_LABEL"
					description="TPL_BASETHEME_FIELD_COPYRIGHTS_DESC"
					filter="string" />
                
			</fieldset>
            
            <fieldset name="layout">
                <field name="menu_fixed" type="radio"
                    default="0" class="btn-group btn-group-yesno"
                    label="TPL_BASETHEME_FIELD_MENU_FIXED_LABEL"
                    description="TPL_BASETHEME_FIELD_MENU_FIXED_DESC"
                    filter="INT">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>

            <fieldset name="functionality">
                <field name="vendors_lightbox" type="radio"
                    default="1" class="btn-group btn-group-yesno"
                    label="TPL_BASETHEME_FIELD_VENDORS_LIGHTBOX_LABEL"
                    description="TPL_BASETHEME_FIELD_VENDORS_LIGHTBOX_DESC"
                    filter="INT">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="vendors_animated" type="radio"
                    default="1" class="btn-group btn-group-yesno"
                    label="TPL_BASETHEME_FIELD_VENDORS_ANIMATED_LABEL"
                    description="TPL_BASETHEME_FIELD_VENDORS_ANIMATED_DESC"
                    filter="INT">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="back_to_top" type="radio"
                    default="1" class="btn-group btn-group-yesno"
                    label="TPL_BASETHEME_FIELD_BACK_TO_TOP_LABEL"
                    description="TPL_BASETHEME_FIELD_BACK_TO_TOP_DESC"
                    filter="INT">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
            
            <fieldset name="advanced" label="TPL_BASETHEME_FIELDSET_ADVANCED_LABEL">
                
                <field name="code_head"  type="spacer"
					label="TPL_BASETHEME_FIELD_CODE_HEAD_LABEL" />
                <field name="code_head_top"  type="textarea" default=""
					label="TPL_BASETHEME_FIELD_CODE_TOP_LABEL"
					description="TPL_BASETHEME_FIELD_CODE_HEAD_TOP_DESC"
					filter="string" />
                <field name="code_head_bottom"  type="textarea" default=""
					label="TPL_BASETHEME_FIELD_CODE_BOTTOM_LABEL"
					description="TPL_BASETHEME_FIELD_CODE_HEAD_BOTTOM_DESC"
					filter="string" />
                
                <field name="code_body"  type="spacer"
					label="TPL_BASETHEME_FIELD_CODE_BODY_LABEL" />
                <field name="code_body_top"  type="textarea" default=""
					label="TPL_BASETHEME_FIELD_CODE_TOP_LABEL"
					description="TPL_BASETHEME_FIELD_CODE_BODY_TOP_DESC"
					filter="string" />
                <field name="code_body_bottom"  type="textarea" default=""
					label="TPL_BASETHEME_FIELD_CODE_BOTTOM_LABEL"
					description="TPL_BASETHEME_FIELD_CODE_BODY_BOTTOM_DESC"
					filter="string" />
                
            </fieldset>
			
		</fields>
	</config>
	
</extension>
